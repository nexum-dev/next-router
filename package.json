{
  "name": "@nexum-ag/next-router",
  "version": "1.4.8",
  "description": "A routing library for Next.js",
  "repository": "nexum-dev/next-router",
  "license": "MIT",
  "source": "src/index.ts",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/index.js",
    "dist/index.js.map",
    "dist/index.d.ts",
    "dist/index.mjs",
    "dist/index.mjs.map"
  ],
  "scripts": {
    "watch": "tsup src/index.ts --watch",
    "build": "tsup",
    "prepare": "yarn build",
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "code:check": "rome check src/*.ts src/**/*.ts",
    "code:format": "rome format src/**/*.ts --write",
    "code:fix": "rome check src/**/*.ts --apply"
  },
  "tsup": {
    "entry": ["src/index.ts"],
    "splitting": false,
    "sourcemap": true,
    "dts": true,
    "clean": true,
    "format": ["cjs","esm"]
  },
  "peerDependencies": {
    "next": ">=2",
    "react": "^16.0.0-0 || ^17.0.0-0",
    "react-dom": "^16.0.0-0 || ^17.0.0-0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn code:check"
    }
  },
  "devDependencies": {
    "@parcel/packager-ts": "2.8.3",
    "@parcel/transformer-typescript-types": "2.8.3",
    "@types/jest": "^29.4.0",
    "@types/next": "^9.0.0",
    "@types/react": "^17.0.13",
    "@types/react-dom": "^17.0.8",
    "husky": "^4.2.3",
    "jest": "^29.4.3",
    "next": "^11.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rome": "^11.0.0",
    "ts-jest": "^29.0.5",
    "tslib": "^2.5.0",
    "tsup": "^6.6.3",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "path-to-regexp": "^6.2.0"
  }
}
